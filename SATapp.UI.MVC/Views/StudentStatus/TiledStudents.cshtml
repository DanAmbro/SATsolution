@model IEnumerable<SATapp.DATA.EF.Models.StudentStatus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Index">Table View</a>
</p>
<div class="row">

    @foreach (var students in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-4">
            <div class="box">
                <div class="option_container">
                    <div class="options">
                        <a asp-action="Details"
                           asp-route-id="@students.Ssname"
                           class="option1">
                            @students.Ssname
                        </a>
                        <a asp-action="Delete"
                           asp-controller="StudentStatus"                           
                           class="option2">
                            Delete
                        </a>
                    </div>
                </div>
                <div class="img-box">
                    <img src="~/">
                </div>
                
            </div>
        </div>

    }


</div>

